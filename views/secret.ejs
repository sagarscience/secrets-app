<!DOCTYPE html>
<html>
  <head>
    <title>Secret Page</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <h2>Welcome, <%= user.name %>!</h2>
      <p>Email: <%= user.email %></p>

      <h3>Your Secrets:</h3>
      <ul>
        <% if (user.secrets && user.secrets.length > 0) { %> <%
        user.secrets.forEach((secret, index) => { %>
        <li>
          <%= secret %>
          <form
            action="/edit/<%= index %>"
            method="GET"
            style="display: inline"
          >
            <button type="submit" class="small-btn btn-edit">Edit</button>
          </form>
          <form
            action="/delete/<%= index %>"
            method="POST"
            style="display: inline"
          >
            <button
              type="submit"
              class="small-btn btn-delete"
              onclick="return confirm('Are you sure?')"
            >
              Delete
            </button>
          </form>
        </li>
        <% }); %> <% } else { %>
        <li>No secrets submitted yet.</li>
        <% } %>
      </ul>

      <a href="/submit">Submit Another Secret</a><br />
      <a href="/logout">Logout</a>
    </div>
  </body>
</html>
